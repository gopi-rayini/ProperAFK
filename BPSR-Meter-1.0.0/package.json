{
  "name": "bpsr-meter",
  "version": "1.0.0",
  "description": "BPSR Meter",
  "main": "electron-main.js",
  "bin": {
    "bpsr-meter": "server.js"
  },
  "engines": {
    "node": "^22.15.0"
  },
  "scripts": {
    "build": "pkg .",
    "start": "electron .",
    "lint:pritter": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "dmlgzs <https://github.com/dmlgzs/StarResonanceDamageCounter>",
  "contributors": [
    "MrSnakeVT <cruz.tec.mecatronica@gmail.com>"
  ],
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "cap": "^0.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-protobuf": "^4.0.0",
    "long": "^5.3.2",
    "protobufjs": "^7.5.4",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.6.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "prettier": "^3.6.2",
    "protobufjs-cli": "^1.1.3"
  },
  "pkg": {
    "scripts": "server.js",
    "assets": [
      "public/**/*",
      "tables/**/*",
      "diccionario.json",
      "ip.txt",
      "player_map.json",
      "settings.json",
      "users.json",
      "node_modules/cap/**/*"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "dist"
  },
  "build": {
    "appId": "com.bpsr.meter",
    "productName": "BPSR Meter",
    "files": [
      "electron-main.js",
      "server.js",
      "preload.js",
      "src/**/*",
      "algo/**/*",
      "public/**/*",
      "tables/**/*",
      "diccionario.json",
      "player_map.json",
      "settings.json",
      "users.json",
      "icon.ico",
      "icon.png",
      "medidor.png",
      "portada.png"
    ],
    "extraResources": [
      {
        "from": "node_modules/cap/",
        "to": "cap/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "include": "extra.nsh",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "dist_electron"
    }
  }
}
